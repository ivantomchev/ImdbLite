@model ImdbLite.Web.Areas.Administration.ViewModels.Movies.IMovieInputModel

@for (int i = 0; i < Model.Characters.Count(); i++)
{
    <div class="form-group">
        @Html.HiddenFor(m => Model.Characters[i].Id, new { item = Model.Characters[i].CelebrityId })
        @Html.HiddenFor(m => Model.Characters[i].CelebrityName)
        @Html.HiddenFor(m => Model.Characters[i].CelebrityId)
        @Html.HiddenFor(m => Model.Characters[i].MovieId)
        @Html.LabelFor(m => Model.Characters[i].CharacterName, Model.Characters[i].CelebrityName +" as", new { @class = "form-label" })
        @Html.TextBoxFor(m => Model.Characters[i].CharacterName, new { @class = "form-control", celebrity = Model.Characters[i].CelebrityName })
        @Html.ValidationMessageFor(m => Model.Characters[i].CharacterName, "", new { @class = "text-danger" })
    </div>
}