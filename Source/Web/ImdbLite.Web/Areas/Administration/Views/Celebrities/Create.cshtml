@model ImdbLite.Web.Areas.Administration.ViewModels.Celebrities.CelebrityInputModel
@using (Html.BeginForm("Create", "Celebrities", new { area = GlobalConstants.AdminArea }, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div id="container" class="form container-fluid">
        @Html.ValidationSummary(true, string.Empty, new { @class = "text-danger" })
        <div class="col-md-5">
            <div class="form-group">
                @Html.Image(Url.Content("~/Files/Images/Common/No_Photo.jpg"), new { @class = "img-responsive poster-preview", id = "image-preview" })
                @Html.EditorFor(model => model.FileToUpload)
            </div>
        </div>
        <div class="col-md-6">
            @Html.EditorFor(m => m.FirstName)
            @Html.EditorFor(m => m.LastName)
            @Html.EditorFor(m => m.BirthName)
            @Html.EditorFor(m => m.BirthDate)
            @Html.EditorFor(m => m.Biography)
        </div>
    </div>
    <div class="form-group">
        @Html.Submit("Save", new { @class = "btn btn-primary" })
    </div>

}
@section scripts{
    @Scripts.Render("~/bundles/picture-preview")
    @Scripts.Render("~/bundles/jqueryval")
}