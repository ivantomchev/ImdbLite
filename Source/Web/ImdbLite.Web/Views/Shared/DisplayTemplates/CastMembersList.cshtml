@model IList<ImdbLite.Web.ViewModels.CastMember.CastMemberMovieViewModel>


<li class="row">
    <div class="text-info col-md-3">@ViewData["title"]:</div>
    <div class="col-md-6">
        @for (int i = 0; i < Model.Count(); i++)
        {
            bool isLast = i == Model.Count() - 1;

            if (isLast)
            {
                @Html.ActionLink(Model[i].CelebrityFullName, "Details", "Celebrities", new { id = Model[i].CelebrityId }, null)
            }
            else
            {
                @Html.ActionLink(Model[i].CelebrityFullName, "Details", "Celebrities", new { id = Model[i].CelebrityId }, null)
                <span>, </span>
            }
        }
    </div>
</li>
