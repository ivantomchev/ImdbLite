@model IEnumerable<ImdbLite.Web.ViewModels.Character.CharacterMovieViewModel>

@if (Model.Count() != 0)
{
    <div class="panel @ViewData["class"]">
        <div class="panel-heading" data-toggle="collapse" data-target="#cast" aria-expanded="false">
            <h3 class="panel-title text-uppercase pointer">Cast</h3>
        </div>
        <div class="panel-body collapse collection" id="cast">
            <table class="table table-hover table-bottom-border">
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="row">
                            <td class="col-md-7">@Html.ActionLink(item.CelebrityFullName, "Details", "Celebrities", new { id = item.CelebrityId }, null)</td>
                            <td class="col-md-5 text-right">@Html.DisplayFor(m => item.CharacterName)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
