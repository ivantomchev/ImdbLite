@model IEnumerable<ImdbLite.Web.ViewModels.Movies.MovieCinemaListItemViewModel>

@if (Model.Count() != 0)
{
    <div class="panel @ViewData["class"]">
        <div class="panel-heading" data-toggle="collapse" data-target="#movies" aria-expanded="false">
            <h3 class="panel-title text-uppercase pointer">@ViewData["title"]</h3>
        </div>
        <div class="panel-body collapse collection" id="movies">
            <table class="table table-striped table-hover">
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="row">
                            <td class="col-md-11">@Html.ActionLink(item.Title, "Details", "Movies", new { id = item.Id }, null)</td>
                            <td class="col-md-2">@Html.DisplayFor(m => item.Year)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}