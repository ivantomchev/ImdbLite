@model IList<ImdbLite.Web.ViewModels.Contacts.ContactIndexViewModel>

@if (Model.Count() != 0)
{

    for (int i = 0; i < Model.Count(); i++)
    {
        if (i == 0)
        {
            <a href="@Url.Action("QuickView", "Contacts", new { Id = Model[i].Id })" class="cinemaItem">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title text-uppercase">@Html.DisplayFor(m => Model[i].Title) - @Html.DisplayFor(m => Model[i].City)</h3>
                    </div>
                    <div class="panel-body text-white">
                        @Html.DisplayFor(m => Model[i].Address)
                    </div>
                </div>
            </a>
        }
        else
        {
            <a href="@Url.Action("QuickView", "Contacts", new { Id = Model[i].Id })" class="cinemaItem">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h3 class="panel-title text-uppercase">@Html.DisplayFor(m => Model[i].Title) - @Html.DisplayFor(m => Model[i].City)</h3>
                    </div>
                    <div class="panel-body text-white">
                        @Html.DisplayFor(m => Model[i].Address)
                    </div>
                </div>
            </a>
        }

    }
}

