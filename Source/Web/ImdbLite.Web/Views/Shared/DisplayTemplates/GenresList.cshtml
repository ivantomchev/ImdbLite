@model IList<ImdbLite.Data.Models.Genre>


<li class="row">
    <div class="text-info col-md-3">Genres:</div>
    <div class="col-md-6">
        @for (int i = 0; i < Model.Count(); i++)
        {
            bool isLast = i == Model.Count() - 1;

            if (isLast)
            {
                @Html.DisplayFor(m => Model[i].Name)
            }
            else
            {
                @Html.DisplayFor(m => Model[i].Name)<span>, </span>
            }
        }
    </div>
</li>