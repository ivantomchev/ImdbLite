<div class="panel panel-success">
    <div class="panel-heading" data-toggle="collapse" data-target="#actors" aria-expanded="false">
        <h3 class="panel-title text-uppercase">@Html.DisplayNameFor(model => model)</h3>
    </div>
    <div class="panel-body collapse collection" id="actors">
        <table class="table table-hover">
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="row">
                        <td class="col-md-6">@Html.ActionLink(item.MovieTitle, "Details", "Movies", new { id = item.MovieId }, null)</td>
                        <td class="col-md-5">@Html.DisplayFor(m => item.CharacterName)</td>
                        <td class="col-md-1">@Html.DisplayFor(m => item.MovieReleaseDate)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>