@{
    ViewBag.Title = "Movies";
}

<div class="container">

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header row">
                @ViewBag.Title
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="row">
                @Html.ActionAsync("GetArticlesListItems", "Articles", new { take = 10 })
            </div>
        </div>

        <div class="col-md-8">
            <div id="update-target" class="col-md-12">
                @Html.ActionAsync("ReadData")
            </div>
        </div>
    </div>

</div>

@section scripts{
    @Scripts.Render("~/bundles/scroll-to-top")
    <script>
        $(document).ready(function (e) {
            $(".partial-content").each(function (index, item) {
                var $current = $(item);
                var url = $current.data("url");
                if (url && url.length > 0) {
                    $current.load(url);
                }
            });
        })
    </script>
}