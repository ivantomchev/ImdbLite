@model IEnumerable<ImdbLite.Web.ViewModels.Movies.MovieCinemaListItemViewModel>

@if (Model != null && Model.Any())
{
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title text-uppercase pointer">@ViewBag.Title</h3>
        </div>
        <div class="panel-body">
            <table class="table table-bottom-border table-striped table-hover">
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="row">
                            <td class="col-md-11">@Html.ActionLink(item.Title, "Details", "Movies", new { id = item.Id }, null)</td>
                            <td class="col-md-2">@Html.DisplayFor(m => item.Year)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="panel-footer text-center">
            @Html.ActionLink("Go To Movies", "Index", "Movies", null, new { @class = "btn btn-success" })
        </div>
    </div>
}
